{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run UIUA or BQN",
            "type": "shell",
            "command": "cd \"${fileDirname}\" && if [[ \"${fileExtname}\" == \".bqn\" ]]; then bqn -p \"$(cat \"${file}\")\"; else uiua run \"${file}\"; fi",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "echo": true,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ],
    "bqn.executablePath" : "/usr/bin/env bqn",
    "bqn.enableHoverDocumentation" : true
}